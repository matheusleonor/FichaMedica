@{
    ViewData["Title"] = "Página Inicial";
}

<section class="hero-banner">
    <div class="hero-content">
        <h1 class="hero-title">Bem-vindo à nossa Clínica Hospitalar</h1>
        <p class="hero-subtitle">Cuidando da sua saúde com compromisso e dedicação</p>
        <a href="#services" class="btn btn-primary">Nossos Serviços</a>
    </div>
</section>

<section id="about" class="about-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <img src="~/images/EquipeMedica.jpg" alt="Sobre Nós" class="img-fluid about-img">
            </div>
            <div class="col-lg-6">
                <h2 class="section-title">Conheça a Nossa Clínica</h2>
                <p class="section-description">Somos uma equipe dedicada de profissionais de saúde comprometidos em fornecer atendimento médico excepcional para você e sua família. Nossa missão é oferecer cuidados abrangentes e personalizados para garantir o seu bem-estar.</p>
            </div>
        </div>
    </div>
</section>

<section id="services" class="services-section">
    <div class="container">
        <h2 class="section-title">Nossos Serviços</h2>
        <div class="row">
            <div class="col-lg-4">
                <div class="service-item">
                    <img src="~/images/ConsultaEspecializada.jpg" alt="Serviço 1" class="img-fluid service-img">
                    <h3 class="service-title">Consultas Especializadas</h3>
                    <p class="service-description">Oferecemos uma variedade de consultas especializadas com médicos experientes em diversas áreas da medicina.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="service-item">
                    <img src="~/images/ExamesAvancados.jpg" alt="Serviço 2" class="img-fluid service-img">
                    <h3 class="service-title">Exames Avançados</h3>
                    <p class="service-description">Contamos com tecnologia de ponta para realizar exames precisos e auxiliar no diagnóstico médico.</p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="service-item">
                    <img src="~/images/CuidadosPreventivos.jpg" alt="Serviço 3" class="img-fluid service-img">
                    <h3 class="service-title">Cuidados Preventivos</h3>
                    <p class="service-description">Priorizamos a prevenção e orientamos nossos pacientes sobre práticas saudáveis para uma vida plena.</p>
                </div>
            </div>
        </div>
    </div>
</section>
