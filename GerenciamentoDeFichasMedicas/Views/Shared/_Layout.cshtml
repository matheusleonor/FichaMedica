@model GerenciamentoDeFichasMedicas.Models.Usuarios

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GerenciamentoDeFichasMedicas</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GerenciamentoDeFichasMedicas.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GerenciamentoDeFichasMedicas</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center">
                        <button type="button" class="btn btn-primary mx-2" data-bs-toggle="modal" data-bs-target="#criarContaModal">
                            Criar Conta
                        </button>
                        <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#entrarContaModal">
                            Entrar na Conta
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Modais para Criar Conta e Entrar na Conta -->
    <div class="modal fade" id="criarContaModal" tabindex="-1" aria-labelledby="criarContaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="criarContaModalLabel">Criar Conta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Usuarios" asp-action="Create">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="NomeUsuario" class="control-label"></label>
                            <input asp-for="NomeUsuario" class="form-control" required />
                            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SenhaHash" class="control-label"></label>
                            <input type="password" asp-for="SenhaHash" class="form-control" required />
                            <span asp-validation-for="SenhaHash" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="FuncaoId" class="control-label"></label>
                            <select asp-for="FuncaoId" class="form-control" id="selectFuncao"></select>
                            <span asp-validation-for="FuncaoId" class="text-danger"></span>
                        </div>

                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Criar Conta</button>


                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="entrarContaModal" tabindex="-1" aria-labelledby="entrarContaModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="entrarContaModalLabel">Entrar na Conta</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
                </div>
                <div class="modal-body">
                    <form method="post" asp-controller="Usuarios" asp-action="Login">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="NomeUsuario" class="control-label">Nome De Usuario:</label>
                            <input asp-for="NomeUsuario" class="form-control" required />
                            <span asp-validation-for="NomeUsuario" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="SenhaHash" class="control-label">Senha:</label>
                            <input type="password" asp-for="SenhaHash" class="form-control" required/>
                            <span asp-validation-for="SenhaHash" class="text-danger"></span>
                        </div>
                        <br />
                        @if (TempData["MensagemErro"] != null)
                        {
                            <div class="alert alert-danger">
                                @TempData["MensagemErro"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                            <br />
                        }

                        <button type="submit" class="btn btn-primary">Entrar</button>
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>

                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["MensagemSucesso"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["ExibirModalErro"] != null)
    {
        <script>
            $(document).ready(function () {
                MostrarErro();
            });
        </script>
    }



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>



